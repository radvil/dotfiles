#!/usr/bin/env zsh

__info() {
	printf "[\033[00;34mðŸš€INFO\033[0m] %s$1\n"
}

cached_dir=$(pwd)

cd "$HOME/AMI"

dir_name=$(printf "%s\n" "$@" | fd . --type=d --max-depth=1 | fzf-tmux -p -h 81% -w 69% --layout="reverse" --border --prompt="ðŸš€ Select Project Â» " --preview="eza -l {} --icons --git-ignore --no-user --no-time --sort type -T -L 6" --preview-window="bottom,25")

if [[ -z $dir_name ]]; then
  __info "No project was selected"
  cd "$cached_dir"
else
  __tmux_session "$dir_name" "nvim"
  cd "$cached_dir"
fi
