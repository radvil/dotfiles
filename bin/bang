#!/bin/bash
# @desc: custom chatgpt prompt
# needs $OPENAI_API_KEY

ROLE="user"
MODEL="gpt-3.5-turbo"
DEBUG="false"

function error() {
	printf "\033[31m[âŒERR]\033[0m%s$1"
	exit 1
}

function success() {
	printf "\033[00;32m%s$1\033[0m"
}

function info() {
	printf "\033[00;34m%s$1\033[0m"
}

function warn() {
	printf "\033[0;33m%s$1\033[0m"
}

function create_body() {
	if [ -z "$1" ]; then
		error ""
	fi
	cat <<EOF
{
  "model": "$MODEL",
  "messages": [
    {
      "role": "$ROLE", 
      "name": "$(whoami)", 
      "content": "$1"
    }
  ]
}
EOF
}

function create_reply() {
	response="$1"
	reply=$(echo "$response" | jq -r '.choices[0].message.content')
	success "\n[ğŸ¤– Bang]\n"
	warn "%s$reply\n\n"
}

function send_message() {
	data=$(create_body "$1" "$2")
	response=$(
		curl -s \
			--url "https://api.openai.com/v1/chat/completions" \
			--header "Authorization: Bearer $OPENAI_API_KEY" \
			--header "Content-Type: application/json" \
			--data "$data"
	)
	if [ "$DEBUG" = "true" ]; then
		info "\n%s[DEBUG: Req Body]\n"
		printf "%s$data\n"
		info "\n%s[DEBUG: Res Body]\n"
		printf "%s$response\n"
	fi
	create_reply "$response"
}

function welcome() {
	info "\nWelcome to ChatGPT "
	success "<$MODEL>\n"
	warn "Type 'h' for available commands!\n\n"
}

function main() {
	welcome
	while true; do
		read -rp "Â» " input
		if [ "$input" = "exit" ]; then
			warn "GOODBYE!\n"
			exit 0
		elif [ "$input" = "clear" ] || [ "$input" = "cl" ]; then
			clear
			welcome
		elif [ "$input" = "help" ] || [ "$input" = "h" ]; then
			clear
			welcome
			info "Available commands:\n"
			warn "ğŸ”¸clear Â» Clear prompt\n"
			warn "ğŸ”¸exit  Â» Exit this prompt\n"
			warn "ğŸ”¸help  Â» Show this help\n\n"
		else
			send_message "$input"
		fi
	done
}

main
