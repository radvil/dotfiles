#!/usr/bin/env zsh

__fail() {
	printf "\033[2K[\033[0;31mâŒFAIL\033[0m] %s$1\n"
  exit 1
}

__info() {
	printf "[\033[00;34mðŸš€INFO\033[0m] %s$1\n"
}

if pgrep -x "neovide" > /dev/null
then
  __fail "Neovide is already running"
fi

NVIM_APPNAME="nvmini"

if [[ "$1" == "--config" ]]; then
  NVIM_APPNAME="$2"
elif [[ "$1" == "--config="* ]]; then
  NVIM_APPNAME="${1#*=}"
fi

export NVIM_APPNAME

selected=$(printf "%s\n" "$@" | z | fzf-tmux -p -h 81% -w 69% --border --prompt="ðŸš€ Select Path Â» ")

full_path=$(echo "$selected" | tr -s ' ' | cut -d ' ' -f 2)

if [[ -z $full_path ]]; then
  __info "No path was selected"
  exit 1
else
  cd "$full_path" && neovide
fi
