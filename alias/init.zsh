#!/usr/bin/env bash

alias cl="clear"
alias rm="trash"
alias ls="exa"
alias ll='exa -alF'
alias la='exa -la'
alias grep="rg"
alias mx="tmux"
alias v="NVIM_APPNAME=nvim-minimal nvim"
alias lzvim="NVIM_APPNAME=lazyvim nvim"
alias nvchad="NVIM_APPNAME=nvchad nvim"
alias vi="NVIM_APPNAME=nvim nvim"
alias rad="NVIM_APPNAME=radvil nvim"
alias so-bash="source ~/.bashrc"
alias so-zsh="source ~/.zshenv"
alias purge-nvim-cache="rm -rf ~/.cache/nvim && rm -rf ~/.local/state/nvim"
alias n="nnn -P v"
alias N="sudo nnn -P v"
alias icat="kitty +kitten icat"
alias gpt="chatgpt -c "
alias x="exit"
